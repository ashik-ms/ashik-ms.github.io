---
const { title, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
const tag_url = url.split("/").slice(0, -1).join("/") + "/tag";
const BASE = import.meta.env.BASE_URL && import.meta.env.BASE_URL !== '/' ? import.meta.env.BASE_URL : '';
const resolvedTagUrl = tag_url && tag_url.startsWith('/') ? `${BASE}${tag_url}` : tag_url;
const resolvedImg = img && img.startsWith('/') ? `${BASE}${img}` : img;
---

<div
  class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]"
>
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <img
            src={resolvedImg}
            alt={title}
            class="max-w-full md:max-w-[13rem] rounded-lg"
          />
        )
      }
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
        </h1>
        <p class="py-1 text-1xl">{desc}</p>
        <div class="card-actions justify-end">
          {
            tags &&
              tags.map((tag) => (
                <a href={`${resolvedTagUrl}/${tag}`} class="badge badge-outline">
                  {tag}
                </a>
              ))
          }
        </div>
      </div>
    </div>
  </a>
</div>
